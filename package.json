{
  "name": "iniquity",
  "version": "1.0.0",
  "description": "A re-imagining of the iconic BBS software.",
  "scripts": {
    "prepublish": "npx typedoc --theme default ./packages",
    "start": "node_modules/.bin/concurrently --prefix \"[{name} {time}]\" -t \"HH:mm:ss\" -c \"bgGreen.bold,bgCyan.bold,bgMagenta.bold,bgBlue.bold,bgYellow.bold\" --kill-others-on-fail -n system,bundler \"docker-compose up --build\" \"npx rollup -c packages/core/rollup.config.ts --watch\"",
    "test": "echo \"Error: no test specified\" && exit 1",
    "release": "lerna exec --concurrency 1 -- npx --no-install semantic-release -e semantic-release-monorepo"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/iniquitybbs/iniquity.git"
  },
  "workspaces": [
    "packages/*"
  ],
  "author": "ispyhumanfly",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/iniquitybbs/iniquity/issues"
  },
  "homepage": "https://github.com/iniquitybbs/iniquity#readme",
  "dependencies": {
    "@types/node": "^14.6.0",
    "@types/terminal-kit": "^1.28.2",
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.9.1",
    "commander": "^6.0.0",
    "concurrently": "^5.3.0",
    "terminal-kit": "^1.42.0",
    "typedoc-plugin-markdown": "^3.11.2",
    "typescript": "4.2.4"
  },
  "devDependencies": {
    "@semantic-release/npm": "^7.0.10",
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "lerna": "^4.0.0",
    "prettier": "2.2.1",
    "semantic-release": "^17.4.2",
    "semantic-release-monorepo": "^7.0.5",
    "typedoc": "^0.22.5",
    "typedoc-github-wiki-theme": "^0.6.0"
  }
}
