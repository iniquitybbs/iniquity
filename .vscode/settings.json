{
  "typescript.tsdk": "node_modules/typescript/lib",

  // ESLint
  "eslint.options": {
    "configFile": ".eslintrc.json"
  },
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],

  // Files
  "files.encoding": "utf8",
  "files.trimFinalNewlines": true,
  "files.insertFinalNewline": true,
  "files.exclude": {
    "**/node_modules": true,
    "*lock.json": true,
    "**/*.js": true,
    "**/.e[^n]*": true,
    "**/.p[^n]*": true,
    "Dockerfile": true,
    "docker-compose.yml": true,
    "**/.gitignore": true,
    "**/.sonarcloud*": true,
    ".vscodeignore": true,
    ".vscode": true,
    "@types": true
},
  // Editor
  "editor.quickSuggestions": {
    "strings": true
  },
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": true,
    "eslint.format.enable": true
  }
}
