{
  "typescript.tsdk": "node_modules/typescript/lib",

  // ESLint
  "eslint.options": {
    "configFile": ".eslintrc.json"
  },
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],

  // Files
  "files.encoding": "utf8",
  "files.trimFinalNewlines": true,
  "files.insertFinalNewline": true,
  "files.exclude": {
    ".github": false,
    "**/node_modules": false,
    "**/package-lock.json": false,
    "**/.e[^n]*": false,
    "**/.p[^n]*": false,
    "**/.gitignore": false,
    "**/.sonarcloud*": false,
    ".vscodeignore": false,
    ".vscode": false,
    ".parcel-cache": false,
    "**/.rollup.cache": false,
    "**/tsconfig.tsbuildinfo": false,
    "lerna.json": false,
    ".nvmrc": false
},
  // Editor
  "editor.quickSuggestions": {
    "strings": true
  },
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": true,
    "eslint.format.enable": true
  }
}
