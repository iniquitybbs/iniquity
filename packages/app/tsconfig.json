{
    "extends": "../../tsconfig.json",
    "references": [{ "path": "../cli" }],
    "compilerOptions": {
        "strict": true,
        "strictFunctionTypes": false,
        "module": "esnext",
        "allowSyntheticDefaultImports": true,
        "target": "es3",
        "moduleResolution": "node",
        "types": ["node"],
        "baseUrl": ".",
        "lib": ["es2020"],
        "skipLibCheck": true,
        "resolveJsonModule": false,
        "outDir": "dist"
    },
    "include": ["src/**/*"],
    "exclude": [".vscode", "node_modules", "dist", "**/*.spec.ts"]
}
