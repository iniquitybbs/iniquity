{
    "extends": "../../tsconfig.bundle.json",
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "types": ["node"],
        "checkJs": false,
        "allowJs": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "module": "esnext",
        "target": "es3",
        "baseUrl": ".",
        "rootDir": "src",
        "outDir": "dist"
    },
    "include": ["src/**/*.ts"],
    "exclude": [".vscode", "node_modules", "dist", "**/*.spec.ts"]
}
