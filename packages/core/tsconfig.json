{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "typeRoots": ["./src", "./src/modules", "./src/library"],
        "baseUrl": ".",
        "lib": ["es2020", "es2015", "dom", "es2015.promise", "esnext"],
        "skipLibCheck": true,
        "sourceMap": true,
        "rootDirs": ["src", "src/commands", "src/templates", "src/assets", "src/modules", "src/includes"],
        "outDir": "dist",
        "declaration": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*.ts"],
    "exclude": [".vscode", "dist", "node_modules"]
}
