{
    "extends": "../../tsconfig.json",
    "references": [{ "path": "../core" }],
    "compilerOptions": {
        "strict": true,
        "strictFunctionTypes": false,
        "module": "none",
        "allowSyntheticDefaultImports": true,
        "target": "es5",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "types": ["node"],
        "baseUrl": ".",
        "lib": ["es2020"],
        "skipLibCheck": true,
        "outDir": "dist"
    },
    "include": ["src/**/*"],
    "exclude": [".vscode", "node_modules", "dist"]
}
